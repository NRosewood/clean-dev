-
  var dataNav = [
    {
      "name": "Услуги",
      "path": "#services"
    },
    {
      "name": "Преимущества",
      "path": "#features"
    },
    {
      "name": "Отзывы",
      "path": "#reviews"
    },
    {
      "name": "Контакты",
      "path": "#contacts"
    }
  ];

mixin navigation()
  +b.NAV.navigation&attributes(attributes)
    ul
      each item in dataNav
        li
          a(href=item.path).js-scroll= item.name
